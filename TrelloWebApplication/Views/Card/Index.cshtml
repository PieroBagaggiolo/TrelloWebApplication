@model IEnumerable<TrelloWebApplication.Models.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Trello Cards List</h2>
<p>
    Lista dell cards presenti nella bacheca di Trello
</p>
<p>
    - Clicca su Details per vedere il loro status, le loro checklist, eventuali scadenze, eventuali allegati e le loro label.
</p>
<p>
    - Per scaricare gli eventuali allegati recarsi su Details e seguire le istruzioni.
</p>
<br />
<table class="table" id="tb1">
    <tr>
        <th style="text-align:center">
            TRELLO'S CARDS LIST
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("PRINT PDF", "ExportPDF", "Card", new { @class = "btn btn-danger btn-large" })
@Html.ActionLink("PRINT EXCEL", "ExportExcel", "Report", new { @class = "btn btn-success btn-large" })

