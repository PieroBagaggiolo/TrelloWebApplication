@model IEnumerable<TrelloUtilities.Models.Email>

@{
    ViewBag.Title = "Index";
}


<div>
    <h1>Email Report</h1>
    <p>
        Lista di email alle quali verrà inviata un mail con l'exel contente tutte le informazioni sulle card
    </p>
    <p>
        - <b>Aggiungi destinatario</b> serve a dare nuovi indirizzi email ai quali inviare la mail di notifica
    </p>
    <p>
        - <b>Dalete</b> serve a non far più inviare la mail alla seguente email 
    </p>
</div>
@*<p>
    @Html.ActionLink("Create New", "Create")
    
</p>*@
<table class="table"  id="tb2">
    <tr>
        <th style="text-align:center">
            @*@Html.DisplayNameFor(model => model.ReceiverEmail)*@
            Destinatari
        </th>
    </tr>
    @{
        int prima = 0;
    }

    @foreach (var item in Model)
    {
        if (prima == 0)
        {
            <tr>
                <td>
                    La mail non verà inviata a nessun utente
                </td>
            </tr> 
            prima = 1;
        }
        else
        {
            <tr>
                <td>
                    <table>
                        <tr>
                            <td style="width:88.99%">
                                @Html.DisplayFor(modelItem => item.ReceiverEmail)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        }
    }
    <tr>
        <td  style="text-align:center">
            @Html.ActionLink("Aggiungi destinatario", "CreateAdd")
        </td>
    </tr>

</table>
